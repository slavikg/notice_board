- provide(:title, 'Adverts')

.container

	%h1.new_section Adverts

	-# = form_for adverts_path, method: :get do |f|
	-# 	= f.text_field :search, params[:search]
	-# 	= f.submit "Search"

	= form_tag adverts_path, method: :get do
		= text_field_tag :search, params[:search]
		= submit_tag "Search"

	- if @adverts.blank?
		%p No adverts
	- else
		.row
			- @adverts.each do |advert|
				.span6
					= render advert, user_advert: true, full_content: false
			= will_paginate @adverts